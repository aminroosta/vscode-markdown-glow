{
  "name": "markdown-glow",
  "displayName": "Markdown Glow",
  "description": "Renders Markdown text with live styling as you type, providing a seamless real-time preview of headers, bold, italics, and more directly in the editor.",
  "repository": {
    "type": "git",
    "url": "https://github.com/aminroosta/vscode-markdown-glow.git"
  },
  "homepage": "https://github.com/aminroosta/vscode-markdown-glow",
  "bugs": {
    "url": "https://github.com/aminroosta/vscode-markdown-glow/issues"
  },
  "icon": "assets/icon.jpeg",
  "publisher": "aminroosta",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "extensionKind": [
    "ui"
  ],
  "sideEffects": false,
  "keywords": [
    "markdown",
    "live",
    "preview"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": true
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [ ]
  },
  "configuration": {
    "title": "Vim",
    "type": "object",
    "properties": {
        "markdown.glow.enabled": {
          "type": "boolean",
          "markdownDescription": "Enabled",
          "default": true
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-gfm": "^3.1.0",
    "micromark-extension-gfm": "^3.0.0"
  }
}
